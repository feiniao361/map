.control-area {
  position: absolute;
  width: 120px;
  height: 120px;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.joystick-base {
  position: relative;
  width: 100px;
  height: 100px;
  background: rgba(0,0,0,0.3);
  border-radius: 50%;
}

.joystick-handle {
  position: absolute;
  width: 40px;
  height: 40px;
  background: rgba(255,255,255,0.6);
  border-radius: 50%;
  top: 30px;
  left: 30px;
}