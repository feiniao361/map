/* components/sidebar/sidebar.wxss */.sidebar {
  position: absolute;
  top: 30px;
  left: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 15px;
  cursor: pointer;
}

.menu-item:last-child {
  margin-bottom: 0;
}

.menu-icon {
  width: 40px;
  height: 40px;
  margin-bottom: 5px;
}

.menu-text {
  font-size: 12px;
  color: #333;
}