<!--components/task-list/task-list.wxml-->
<view class="task-list">
  <view class="task-header">
    <text class="task-title">{{taskTitle}}</text>
  </view>
  <view class="task-item" wx:for="{{tasks}}" wx:key="id">
    <view class="task-info">
      <text class="task-name">{{item.name}}</text>
      <text class="task-progress">{{item.progress}}</text>
    </view>
    <view class="task-details">
      <text class="task-level">等级：{{item.level}}</text>
      <text class="task-distance">距离：{{item.distance}}</text>
    </view>
  </view>
</view>