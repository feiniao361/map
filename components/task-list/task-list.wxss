.task-list {
  width:45vw;
  margin-left:1px;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 5px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  padding-bottom: 30px; /* 给图标留出空间 */
}

.task-item {
  position:relative;
  margin-bottom: 10px;
  padding: 0px;
  background-color: #f0f0f0;
  border-radius: 3px;
  display: flex;
  flex-direction: column;
}

.task-item:last-child {
  margin-bottom: 0;
}
.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 4px;
}
.task-name {
  font-weight: bold;
  color: #333;
}
.task-quantity {
  font-size: 14px;
  color: #666;
  text-align: right;
}
.task-level{
  font-size: 12px;
  color: #666;
}

.task-distance {
  position: absolute; /* 定位方式 */
  right: 10px;        /* 距离右边的间距 */
  top: 75%;           /* 垂直居中 */
  transform: translateY(-50%); /* 修正垂直居中的偏移 */
  font-size: 12px;
  color: #666;
}


.collapse-icon {
  position:absolute;
  bottom: 1px;
  right: 10px;
  width: 90%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
}

.icon-image {
  display:block;
  margin:auto;
  width: 24px;
  height: 24px;
}

.task-type-tabs {
  display: flex;
  justify-content: space-around;
  padding: 8px 0;
  border-bottom: 1px solid #ddd;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 16px;
  color: #555;
  padding: 8px 0;
}

.tab.active {
  color: #007bff;
  font-weight: bold;
  border-bottom: 2px solid #007bff;
}
