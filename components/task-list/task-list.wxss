/* components/task-list/task-list.wxss */
.task-list {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50vh;
  background-color: white;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
  overflow-y: auto;
  z-index: 20;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background-color: #f5f5f5;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.task-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.task-item {
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.task-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-name {
  font-size: 14px;
  font-weight: bold;
  color: #007bff;
}

.task-progress {
  font-size: 14px;
  color: #333;
}

.task-details {
  display: flex;
  justify-content: space-between;
  margin-top: 5px;
}

.task-level, .task-distance {
  font-size: 12px;
  color: #666;
}