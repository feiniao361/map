<!--components/task-detail/task-detail.wxml-->
<view class="task-container">
  <!-- 任务基本信息 -->
  <view class="task-header">
    <text class="task-title">{{task.title}}</text>
    <text class="task-level level-{{task.level}}">Lv.{{task.level}}</text>
  </view>

  <!-- 任务详细信息 -->
  <view class="task-info">
    <view class="info-item">
      <text class="info-label">发布者：</text>
      <text class="info-content">{{task.publisher}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">剩余数量：</text>
      <text class="info-content">{{task.remaining}}/{{task.total}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">任务地点：</text>
      <text class="info-content">{{task.location}}</text>
    </view>
  </view>

  <!-- 任务内容详情 -->
  <view class="task-content">
    <text class="content-title">任务描述：</text>
    <text class="content-text">{{task.content}}</text>
  </view>

  <!-- 操作按钮组 -->
  <view class="action-buttons">
    <button 
      class="accept-btn" 
      bindtap="toggleTaskStatus"
      style="background-color: {{isAccepted ? '#ff4444' : '#07c160'}}"
    >
      {{isAccepted ? '放弃任务' : '接受任务'}}
    </button>
    
    <button 
      class="nav-btn" 
      bindtap="navigateToTask"
      disabled="{{!isAccepted}}"
    >
      开始导航
    </button>
  </view>
</view>