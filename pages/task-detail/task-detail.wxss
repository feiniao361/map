/* 全局设置 */
page {
  background-color: #f8f9fa; /* 页面背景色 */
  padding: 16px;
  font-family: Arial, sans-serif;
}

/* 标题样式 */
.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 16px;
}

/* 任务信息块 */
.task-info {
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  padding: 16px;
  margin-bottom: 16px;
}

.task-info .label {
  font-size: 14px;
  font-weight: bold;
  color: #555;
  margin-bottom: 8px;
}

.task-info .value {
  font-size: 16px;
  color: #666;
  margin-bottom: 12px;
}

/* 条件、内容样式 */
.task-conditions, .task-content {
  font-size: 16px;
  line-height: 1.6;
  color: #444;
  margin-bottom: 16px;
}

/* 按钮样式 */
button {
  width: 100%;
  height: 48px;
  background-color: #007bff;
  color: #fff;
  font-size: 16px;
  border-radius: 8px;
  text-align: center;
  line-height: 48px;
  font-weight: bold;
}

button:active {
  background-color: #0056b3;
}