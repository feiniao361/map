<view class="container">
  <!-- 用户名输入框 -->
  <input class="input-field" placeholder="请输入用户名" bindinput="onUsernameInput" />

  <!-- 密码输入框 -->
  <input class="input-field" type="password" placeholder="请输入密码" bindinput="onPasswordInput" />

  <!-- 确认按钮 -->
  <button class="confirm-btn" bindtap="onConfirm">确认</button>
</view>