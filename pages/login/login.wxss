.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #6dd5ed, #2193b0);
  padding: 20rpx;
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20rpx;
  background-color: #f0f0f0;
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname-wrapper {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nickname-label {
  font-size: 26rpx;
  color: #fff;
  margin-right: 10rpx;
}

.nickname-text {
  font-size: 24rpx;
  color: #fff;
}

.get-user-info-btn {
  width: 80%;
  padding: 15rpx;
  margin-top: 20rpx;
  background: linear-gradient(135deg, #43e97b, #38f9d7);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 50rpx;
  border: none;
}

.confirm-btn {
  width: 80%;
  padding: 15rpx;
  margin-top: 20rpx;
  background: linear-gradient(135deg, #ff758c, #ff7eb3);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 50rpx;
  border: none;
}