.container {
  width: 100%;
  height: 100vh;
  position: absolute;
  z-index:1;
}

/* 大地图样式 */
.main-map {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0; /* 地图层级最低 */
}

/* 遥感样式 */
.joystick {
  position: absolute;
  bottom: 20px;
  left: 20px;
  width: 120px;
  height: 120px;
  z-index: 2; /* 在迷雾之上 */
}

.user-card {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  z-index: 1000; /* 确保在侧边栏前面 */
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 50vh; /* 遮罩覆盖上半部分 */
  background-color: rgba(0, 0, 0, 0.5); /* 半透明灰色 */
  z-index: 10; /* 确保在任务列表之上 */
}