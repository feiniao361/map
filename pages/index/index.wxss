.container {
  width: 100%;
  height: 100vh;
  position: absolute;
  z-index:1;
}

/* 大地图样式 */
.main-map {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0; /* 地图层级最低 */
}


/* 小地图样式 */
.miniMap {
  position: absolute;
  top: 4vh;
  right: 0px;
  width: 45vw;
  height: 45vw;
  z-index: 1; /* 在迷雾之上 */
}

/* 小地图战争迷雾的容器样式 */
.mini-war-fog {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 160px;
  height: 160px;
  border-radius: 10px;
  z-index: -10;
  pointer-events: none; /* 防止事件穿透 */
}

/* 遥感样式 */
.joystick {
  position: absolute;
  bottom: 20px;
  left: 20px;
  width: 120px;
  height: 120px;
  z-index: 2; /* 在迷雾之上 */
}

/*人物和菜单栏*/
.circleMenu{
  position:absolute;
  top:60%;
  z-index:5;
}
.circle-menu{
  z-index:3;
}

.menu-btn{
  margin-top:100px;
}

.taskList{
  position:absolute;
  left:0px;
  top:4vh;
}

.user{
  position:absolute;
  top:0px;
  width:100%;
  height:100vh;
}