/* pages/user-info/user-info.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 50rpx;
  }
  
  .userinfo {
    width: 100%;
    margin-bottom: 30rpx;
    text-align: center;
  }
  
  .avatar-wrapper {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    margin: 10rpx auto;
  }
  
  .avatar {
    width: 100%;
    height: 100%;
  }
  
  .nickname-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .nickname-label {
    margin-right: 10rpx;
  }
  
  .nickname-input {
    border: 1px solid #ccc;
    border-radius: 5rpx;
    padding: 5rpx;
  }
  
  .get-user-info-btn {
    width: 80%;
    padding: 20rpx;
    background-color: #1AAD19;
    color: white;
    border: none;
    border-radius: 10rpx;
    margin-top: 20rpx;
  }
  
  .confirm-btn {
    width: 80%;
    padding: 20rpx;
    background-color: #1AAD19;
    color: white;
    border: none;
    border-radius: 10rpx;
    margin-top: 30rpx;
  }